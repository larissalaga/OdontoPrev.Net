@model WebApplicationOdontoPrev.ViewModels.PerfilViewModel
@{
    ViewBag.Title = "Perfil";
}
<div class="container mt-5">
    <h2 class="text-primary text-center mb-4">Editar Perfil</h2>

        <form asp-action="SalvarPerfil" asp-controller="Perfil" method="post" class="mt-4">
            <div class="mb-3">
                <label asp-for="NmPaciente" class="form-label">Nome Completo</label>
                <input asp-for="NmPaciente" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="DtNascimento" class="form-label">Data de Nascimento</label>
                <input asp-for="DtNascimento" type="date" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="DsSexo" class="form-label">Sexo (F/M/I): </label>
                <input asp-for="DsSexo" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="NrTelefone" class="form-label">Telefone</label>
                <input asp-for="NrTelefone" type="tel" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="DsEmail" class="form-label">Email</label>
                <input asp-for="DsEmail" type="email" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="NmPlano" class="form-label">Nome Completo</label>
                <input asp-for="NmPlano" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success w-100 mb-5">Salvar Alterações</button>
        </form>    


    <nav class="navegacao-user text-center mt-4">
        <button type="button" class="btn btn-primary btn-lg rounded-pill" onclick="location.href='@Url.Action("Index","PacienteHome")'">
            Página Inicial
        </button>
        </button>
        <button type="button" class="btn btn-success btn-lg rounded-pill" onclick="location.href='@Url.Action("ExtratoPontos","ExtratoPontos")'">
            Extrato de Pontos
        </button>
        <button type="button" class="btn btn-warning text-white btn-lg rounded-pill" onclick="location.href='@Url.Action("HistoricoCheckIns","HistoricoCheckIns")'">
            Histórico de Check-Ins
        </button>
    </nav>
</div>
