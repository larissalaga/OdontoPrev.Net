@model WebApplicationOdontoPrev.ViewModels.ExtratoPontosViewModel

@{
    ViewBag.Title = "Check-in-Home";
    var dataHoje = DateTime.Now.ToString("dd/MM/yyyy");
}
<div class="container mt-5">
    <div class="saudacao text-center mb-4">
        <p class="display-6">Olá, @Model.NmPaciente</p>
        <p>Plano: @Model.NmPlano</p>
        <p>Data: @dataHoje</p>
        <p>Você tem <strong>@Model.TotalPontos pontos</p>
    </div>

    <h2 class="text-primary">Extrato de Pontos</h2>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead style="background-color: #0054A6; color: white;">
                <tr class="text-center">
                    <th class="text-white text-decoration-none">Data</th>
                    <th class="text-white text-decoration-none">Pontos</th>
                    <th class="text-white text-decoration-none">Movimentação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var extrato in Model.ExtratoPontos)
                {
                    <tr>
                        <td>@extrato.DtExtrato.ToShortDateString()</td>
                        <td>@extrato.NrNumeroPontos</td>
                        <td>@extrato.DsMovimentacao</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav class="navegacao-user text-center mt-4">
        <button type="button" class="btn btn-primary btn-lg rounded-pill" onclick="location.href='@Url.Action("Index","PacienteHome")'">
            Página Inicial
        </button>
        </button>
        <button type="button" class="btn btn-success btn-lg rounded-pill" onclick="location.href='@Url.Action("HistoricoCheckIns","HistoricoCheckIns")'">
            Histórico de Check-Ins
        </button>
        <button type="button" class="btn btn-warning text-white btn-lg rounded-pill" onclick="location.href='@Url.Action("Perfil","Perfil")'">
            Perfil
        </button>
    </nav>
</div>