@model WebApplicationOdontoPrev.ViewModels.CheckInViewModel

@{
    ViewBag.Title = "Check-in";
    var dataHoje = DateTime.Now.ToString("dd/MM/yyyy");
}
<div class="container">
    <p>Olá, @Model.NmPaciente</p>
    <p>Plano: @Model.NmPlano</p>

    <h2>Check-In Diário - @dataHoje </h2>
    <div>
        <form asp-action="Avancar" asp-controller="CheckIn" method="post">
            <div class="mb-3">
                <label class="form-label"><strong>Pergunta:</strong> @Model.DsPergunta</label>
                <input type="hidden" asp-for="IdPergunta" />
            </div>

            <div class="mb-3">
                <label for="DsResposta" class="form-label">Sua Resposta:</label>
                <input type="text" asp-for="DsResposta" class="form-control" />
            </div>

            <input type="hidden" asp-for="Contador" value="@Model.Contador" />
            <input type="hidden" asp-for="IdPaciente" value="@Model.IdPaciente" />
            <input type="hidden" asp-for="DtCheckIn" value="@dataHoje" />
            <input type="hidden" asp-for="NmPlano" value="@Model.NmPlano" />

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary">Avançar/Concluir</button>
            </div>
        </form>
    </div>
</div>